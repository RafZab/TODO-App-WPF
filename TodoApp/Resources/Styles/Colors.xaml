<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#788cde</Color>
    <Color x:Key="PrimaryBackgroundColor">#1c1c1c</Color>
    <Color x:Key="SecondaryColor">#e9adb9</Color>
    <Color x:Key="AlternativeSecondaryColor">#84c7c3</Color>

    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryBackgroundColorBrush" Color="{StaticResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AlternativeSecondaryColorBrush" Color="{StaticResource AlternativeSecondaryColor}" />
</ResourceDictionary>
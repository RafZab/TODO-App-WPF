<UserControl
    x:Class="TodoApp.PropertyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TodoApp"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Control"
    mc:Ignorable="d">
    <Border
        Margin="10"
        Padding="10,10"
        Background="{StaticResource PrimaryBorderPropertyColorBrush}"
        CornerRadius="2">
        <Grid DataContext="{Binding ElementName=Control}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon
                Grid.Column="0"
                Width="{Binding IconWidth}"
                Height="{Binding IconHeight}"
                Foreground="{Binding IconBrush, FallbackValue={Binding FallbackBrush}}"
                Kind="{Binding IconKind}" />
            <TextBlock
                Grid.Column="1"
                FontSize="{Binding TextFontSize}"
                FontWeight="Bold"
                Foreground="{Binding TextBrush, FallbackValue={Binding FallbackBrush}}"
                Text="{Binding Text}" />
        </Grid>
    </Border>
</UserControl>
